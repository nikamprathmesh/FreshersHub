<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/internship_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp"
        android:background="@drawable/profiile_border"
        android:padding="7dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/internship_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web Developer"
                android:textSize="@dimen/profile_textsize"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/internship_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Virtual"
                android:textSize="@dimen/profile_textsize"
                android:layout_marginEnd="@dimen/profile_margin_horizontal"/>
            <ImageView
                android:id="@+id/edit_internship_details"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_edit_24"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/internship_org_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learnclub"
                android:textSize="@dimen/profile_textsize"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/internship_start_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mar"
                android:layout_marginEnd="5dp"
                android:textSize="@dimen/profile_textsize"
                />
            <TextView
                android:id="@+id/internship_start_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021"
                android:layout_marginEnd="5dp"
                android:textSize="@dimen/profile_textsize"
                />
            <TextView
                android:id="@+id/internship_end_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mar"
                android:layout_marginEnd="5dp"
                android:textSize="@dimen/profile_textsize"
                />
            <TextView
                android:id="@+id/internship_end_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022"
                android:layout_marginEnd="5dp"
                android:textSize="@dimen/profile_textsize"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/internship_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ith UI and UX. Practice software development lifecycle. Developed and host learning web portal. Technologies used : HTML, CSS, php, Wordpress"
                android:textSize="@dimen/profile_textsize"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_internship_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/edit_internship_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Position"/>

        <EditText
            android:id="@+id/edit_internship_org_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Organisation Name"
            />
        <EditText
            android:id="@+id/edit_internship_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Internship Mode"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_start_month"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/profile_margin_horizontal"
                android:hint="Start Month"/>
            <EditText
                android:id="@+id/edit_start_year"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/profile_margin_horizontal"
                android:hint="Start Year"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_end_month"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/profile_margin_horizontal"
                android:hint="End Year"/>
            <EditText
                android:id="@+id/edit_end_year"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/profile_margin_horizontal"
                android:hint="End Year"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_internship_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Responsibilities"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/edit_internship_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Cancel"/>

            <Button
                android:id="@+id/edit_internship_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Save"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>