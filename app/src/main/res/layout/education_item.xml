<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/profiile_border"
        android:padding="7dp"
        android:layout_marginVertical="5dp"
        >


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/profile_qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B.E"
                android:textSize="@dimen/profile_textsize"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/profile_passing_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023"
                android:textSize="@dimen/profile_textsize"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/profile_specialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Computer)"
                android:textColor="@color/black"
                android:textSize="@dimen/profile_textsize"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/edit_profile_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_edit_24"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/profile_college_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Government College of Engineering and Research, Avasari"
            android:textSize="@dimen/profile_textsize"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Percent : "
                android:textSize="@dimen/profile_textsize"/>

            <TextView
                android:id="@+id/profile_percent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="85"
                android:textSize="@dimen/profile_textsize"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" %"
                android:textSize="@dimen/profile_textsize"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <EditText
            android:id="@+id/edit_profile_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter qualification"/>
        <EditText
            android:id="@+id/edit_passing_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter passing year"/>
        <EditText
            android:id="@+id/edit_profile_specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter specialization"/>
        <EditText
            android:id="@+id/edit_profile_college_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter college name"/>
        <EditText
            android:id="@+id/edit_profile_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter percentage obtained"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/edit_education_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Cancel"/>
            <Button
                android:id="@+id/edit_education_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>