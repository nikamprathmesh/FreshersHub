<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TnpDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tnp_details_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="@dimen/profile_margin_vertical">

                    <ImageView
                        android:id="@+id/tnp_edit_button"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_baseline_edit_24"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/tnp_photo"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/profile_photo"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="10dp"
                        app:shapeAppearanceOverlay="@style/roundedimage"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tnp_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dr. Sadanand S. Deshpande"
                            android:textStyle="bold"
                            android:textSize="19dp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/tnp_designation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Assistant Professor"
                            android:gravity="center"
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Contact Details"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/tpo_mail_imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_baseline_email_24" />

                            <TextView
                                android:id="@+id/tnp_mail"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:text="tpo@gcoeara.ac.in"
                                android:textSize="17dp"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/tpo_call_imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_baseline_local_phone_24"/>
                            <TextView
                                android:id="@+id/tnp_contact_no"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textSize="17dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:text="+91 8459032813" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="6dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/profiile_border"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="TPO's Message"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tnp_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_gravity="fill_horizontal"
                            android:text="       With vision to ensure the future of Government College of Engineering and Research students in the global market, training and placement cell is constantly taking efforts. The training and placement cell is on high alert, securing opportunities for the students whenever they come. To acquire best possible employability skills we are organizing training programs both by industry experts as well as professionals. The office not only ensures that students have opportunities to get well placed but also consistently guides them for other carries/higher education options, to enable them to fulfil their aspiration. As the institute is established in year 2009 we have done modest start in placemenI take this opportunity to invite you for the recruitment of this year batch."
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/edit_tnp_details_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/profile_margin_horizontal"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit Tnp Details"
                        android:textSize="@dimen/profile_textsize"
                        android:textStyle="bold"/>
"

                    <EditText
                        android:id="@+id/edit_tnp_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tnp Name"/>
                    <EditText
                        android:id="@+id/edit_tnp_designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tnp Designation"/>
                    <EditText
                        android:id="@+id/edit_tnp_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tnp Mail"/>
                    <EditText
                        android:id="@+id/edit_tnp_phone_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contact No"/>
                    <EditText
                        android:id="@+id/edit_tnp_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tnp Message"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:id="@+id/tnp_cancel_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/profile_margin_horizontal"
                            android:text="Cancel"
                            />
                        <Button
                            android:id="@+id/tnp_save_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/profile_margin_horizontal"
                            android:text="Save"
                            />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>